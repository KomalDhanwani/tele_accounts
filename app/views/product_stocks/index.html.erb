<%- model_class = ProductStock -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:price_per_quantity) %></th>
      <th><%= model_class.human_attribute_name(:purchased_from) %></th>
      <th><%= model_class.human_attribute_name(:total_amount) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @product_stocks.each do |product_stock| %>
      <tr>
        <td><%= link_to product_stock.id, product_stock_path(product_stock) %></td>
        <td><%= product_stock.product_id %></td>
        <td><%= product_stock.quantity %></td>
        <td><%= product_stock.price_per_quantity %></td>
        <td><%= product_stock.purchased_from %></td>
        <td><%= product_stock.total_amount %></td>
        <td><%=l product_stock.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_stock_path(product_stock), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_stock_path(product_stock),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_stock_path,
            :class => 'btn btn-primary' %>

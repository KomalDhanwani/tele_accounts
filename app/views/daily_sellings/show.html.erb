<%- model_class = DailySelling -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @daily_selling.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @daily_selling.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price_per_quantity) %>:</strong></dt>
  <dd><%= @daily_selling.price_per_quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sold_to) %>:</strong></dt>
  <dd><%= @daily_selling.sold_to %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_amount) %>:</strong></dt>
  <dd><%= @daily_selling.total_amount %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              daily_sellings_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_daily_selling_path(@daily_selling), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              daily_selling_path(@daily_selling),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

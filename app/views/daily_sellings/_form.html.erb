<%= form_for @daily_selling, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :product_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :product_id, Product.all.collect {|p| [ p.name, p.id ] }, {:prompt => 'Select Product'}, :class => 'number_field'  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :quantity, :class => 'number_field', :max => 100 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price_per_quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price_per_quantity, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sold_to, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sold_to, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                daily_sellings_path, :class => 'btn' %>
  </div>
<% end %>
